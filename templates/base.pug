-load static compress raven

!!!5
html(lang='de')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='initial-scale=1.0')
    //link(rel="shortcut icon", href="{% static 'img/favicon.ico' %}")
    title
      block title
        | Give me a title
    meta(name="viewport", content="initial-scale=1.0")
    link(href="https://fonts.googleapis.com/css?family=Barrio", rel="stylesheet")

    -compress css
      link(rel="stylesheet", href="{% static 'css/bootstrap.min.css' %}")
      link(rel="stylesheet", href="{% static 'css/font-awesome.css' %}")
      link(rel='stylesheet', type='text/x-sass', href='{% static "sass/styles.sass" %}')

body
  #app
    header
      block header
    main
      block content
    footer
      block footer


  script(src="https://unpkg.com/vue@2.5.13/dist/vue.min.js")

  // error reporting for the frontend
  script(src="https://cdn.ravenjs.com/3.20.0/vue/raven.min.js", crossorigin="anonymous")
  script Raven.config('{% sentry_public_dsn %}').install();

  // the missing javascript functions
  script(src="https://unpkg.com/lodash@4.13.1/lodash.min.js")

  // ajax calls
  script(src="https://unpkg.com/axios@0.18.0/dist/axios.min.js")

  // Buefy UI framework
  link(rel="stylesheet", href="https://unpkg.com/buefy/lib/buefy.min.css")
  script(src="https://unpkg.com/buefy")
  link(rel="stylesheet", href="//cdn.materialdesignicons.com/2.0.46/css/materialdesignicons.min.css")
  Vue.use(Buefy.default)

  -compress js
     block extra_js
